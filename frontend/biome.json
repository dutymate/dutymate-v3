{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules",
      "dist",
      "build",
      ".next",
      "coverage",
      ".turbo",
      "tsconfig.*.json"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },

  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "node_modules",
      "dist",
      "build",
      ".next",
      "coverage",
      ".turbo"
    ]
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },

  "overrides": [
    {
      "include": ["**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "error",
            "useExhaustiveDependencies": "warn",
            "noUnusedVariables": "error"
          },
          "suspicious": {
            "noDuplicateObjectKeys": "error",
            "noDuplicateParameters": "error",
            "noUnsafeNegation": "error",
            "useValidTypeof": "error",
            "noExplicitAny": "warn",
            "noExtraNonNullAssertion": "error"
          },
          "style": {
            "noVar": "error",
            "useConst": "error"
          },
          "complexity": {
            "noUselessTypeConstraint": "error"
          }
        }
      }
    }
  ]
}
